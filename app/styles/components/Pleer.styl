.pleer
	z-index 100
	width 100%
	height 58px
	position absolute
	bottom -58px
	left 0
	background-color #2c1e4a
	transition height ease .6s

	.pleer-list
		display none

	&--opened
		transition height ease .6s
		height 258px
		.pleer-list
			display block

	&__wrapper
		padding 14px 12px
		display flex
		align-items center


	&__controls
		display flex

	&__icon
		width 30px
		height 30px
		background-repeat no-repeat
		background-position center
		background-size cover
		margin-right 12px
		border-radius 50%
		transition all ease .2s

		&:hover
			cursor pointer
			background-color rgba(157, 233, 47, 0.4)
			color #fff

.pleer__icon--previous
	image-bg("previous-icon.svg")

.pleer__icon--next
	image-bg("next-icon.svg")

.pleer__icon--play
	image-bg("play-icon.svg")

.pleer__icon--pause
	image-bg("pause-icon.svg")

.playlist
	display flex
	align-items center
	margin-left 10px
	margin-right 30px

	&:hover
		cursor pointer

	&__text
		font-size 14px
		text-transform uppercase
		font-weight bold
		color rgba(255, 255, 255, 0.43)

	&__icon
		opacity .43
		image-bg("burger-light.svg")
		width 16px
		height 11px
		margin-right 4px
		background-repeat no-repeat
		background-position center
		background-size cover
		&:hover
			cursor pointer

.track-title
	position relative
	@media (max-width 550px)
		flex-basis 100%
