.info-bar
	overflow-y scroll
	image-bg('info-bar.jpg')
	background-size auto
	position relative
	background-color #1e5060
	display flex
	flex-basis 46%
	z-index 1
	padding 16px 13px
	flex-wrap wrap
	justify-content space-around
	overflow-y scroll
	height calc(100vh - 148px)
	@media (max-width 850px)
		flex-basis 100%
	&__gradient
		position fixed
		height 160px
		background linear-gradient(to bottom, rgba(0, 0, 0, 0) 20%, rgba(0, 0, 0, 0.64) 100%)
		bottom 57px
		right 0
